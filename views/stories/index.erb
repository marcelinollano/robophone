<div class="header">
  <%= erb(:'nav') %>
  <a href="/stories/new?from=/stories" class="primary">New story</a>
</div>

<div class="header">
  <% if @stories.any? %>
    <table>
      <tr>
        <th>Name</th>
        <th>Beginning</th>
        <th></th>
      </tr>
      <% for story in @stories %>
      <tr>
        <td><a href="/stories/<%= story.id %>"><%= story.name %></a></td>
        <td><%= story.text %></td>
        <td>
          <span class="menu">
            <a href="/stories/<%= story.id %>/edit?from=/stories" class="edit">Edit</a>
            <a href="/stories/<%= story.id %>" class="delete">Delete</a>
          </span>
        </td>
      </tr>
      <% end %>
    </table>
  <% else %>
    <p>No stories yet.</p>
  <% end %>
</div>
