<p>
  <label for="name">Name</label>
  <span class="field">
    <input name="name" type="text" id="name" value="<%= story.name %>">
  </span>
</p>
<p>
  <label for="beginning">Beginning</label>
  <span class="field">
    <textarea name="beginning" id="beginning"><%= story.beginning %></textarea>
  </span>
</p>
<p>
  <label for="queued">Queued</label>
  <span class="field">
    <input name="queued" type="number" id="queued" value="<%= story.queued ||= 20 %>">
    secs
  </span>
</p>
<p>
  <label for="ringing">Ringing</label>
  <span class="field">
    <input name="ringing" type="number" id="ringing" value="<%= story.ringing ||= 20 %>">
    secs
  </span>
</p>
<p>
  <label for="in_progress">In progress</label>
  <span class="field">
    <input name="in_progress" type="number" id="in_progress" value="<%= story.in_progress ||= 20 %>">
    secs
  </span>
</p>
<p>
  <label for="size">Size</label>
  <span class="field">
    <input name="size" type="number" id="size" value="<%= story.size ||= 5 %>">
    posts
  </span>
</p>
<hr>
<p>
  <span class="buttons">
    <input type="submit" value="Save story">
    <a href="/stories" class="secondary">Cancel</a>
  </span>
</p>
