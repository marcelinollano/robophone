<header class="header">
  <%= erb(:'nav') %>
  <a href="/stories/<%= @story.id %>/dial" class="primary">Dial story</a>
</header>

<main class="main">
  <h1>
    <%= @story.name %>
    <a href="/stories/<%= @story.id %>/edit?from=/stories/<%= @story.id %>">Edit</a>
  </h1>

  <p><%= @story.text %></p>

  <% if @calls.any? %>
    <table>
      <tr>
        <th>No</th>
        <th>Name</th>
        <th>Transcript</th>
        <th>Audio</th>
        <th>Status</th>
        <th></th>
      </tr>
      <% @calls.each_with_index do |call, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td>
            <% if call.contact %>
              ðŸ“ž <%= call.contact.name %> (<%= call.contact.rings %>)
            <% else %>
              ðŸ’¥ Random contact
            <% end %>
          </td>
          <td>
            <% if call.transcript %>
              <%= call.transcript %>
            <% else %>
              n/a
            <% end %>
          </td>
          <td>
            <% if call.audio %>
              <a href="<%= call.audio %>" class="play">Play</a>
            <% else %>
              n/a
            <% end %>
          </td>
          <td>
            <% if call.status %>
              <%= call.status %>
            <% else %>
              n/a
            <% end %>
          </td>
          <td>
            <ul class="actions">
              <li><a href="" class="edit">Go</a></li>
              <li><a href="/call/<%= call.id %>" class="delete">Delete</a></li>
            </ul>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</main>
