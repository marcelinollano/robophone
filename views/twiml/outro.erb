<?xml version="1.0" encoding="UTF-8"?>
<Response>
  <Say voice="Polly.Conchita" language="<%= @language ||= ENV['DEFAULT_LANGUAGE'] %>">Termina la historia</Say>
  <Say voice="Polly.Conchita" language="<%= @language ||= ENV['DEFAULT_LANGUAGE'] %>"><%= @text %></Say>
  <Play><%= ENV['APP_URL'] %>/beep.mp3</Play>
  <Gather action="<%= ENV['APP_URL'] %>/hangup.xml?token=<%= ENV['APP_TOKEN'] %>&call_id=<%= @call_id %>"
          language="<%= @language ||= ENV['DEFAULT_LANGUAGE'] %>"
          timeout="<%= @record_time %>"
          input="speech"
          method="GET" />
</Response>
