<?xml version="1.0" encoding="UTF-8"?>
<Response>
  <Play><%= ENV['APP_URL'] %>/audios/intro.wav</Play>
  <Play><%= ENV['APP_URL'] %>/audios/opt-out.wav</Play>
  <Play><%= ENV['APP_URL'] %>/audios/continues.wav</Play>
  <Play><%= ENV['APP_URL'] %>/audios/ready.wav</Play>
  <Say voice="Polly.Conchita" language="<%= @language ||= ENV['DEFAULT_LANGUAGE'] %>"><%= @text %></Say>
  <Play><%= ENV['APP_URL'] %>/audios/beep.wav</Play>
  <Gather action="<%= ENV['APP_URL'] %>/twiml/<%= @id %>/hangup.xml" language="<%= @language ||= ENV['DEFAULT_LANGUAGE'] %>" timeout="<%= @timeout %>" input="speech" method="GET" />
</Response>
