<header class="header">
  <%= erb(:'nav') %>
  <a href="/contacts/new" class="primary">New contact</a>
</header>

<main class="main">
  <% if @contacts.any? %>
    <table>
      <tr>
        <th width="30%">Name</th>
        <th width="30%">Phone</th>
        <th width="15%">Rings</th>
        <th width="25%"></th>
      </tr>
      <% for contact in @contacts %>
      <tr>
        <td>
          <%= contact.name %>
        </td>
        <td>
          <a href="tel:<%= contact.phone %>" class="phone"><%= contact.phone %></a>
        </td>
        <td>
          <%= contact.rings %>
        </td>
        <td align="right">
          <ul class="actions">
            <li><a href="/contacts/<%= contact.id %>/edit?from=/contacts" class="edit">Edit</a></li>
            <li><a href="/contacts/<%= contact.id %>" class="delete">Delete</a></li>
          </ul>
        </td>
      </tr>
      <% end %>
    </table>
  <% end %>
</main>
